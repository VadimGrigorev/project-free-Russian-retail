      Form.тИтогоСдачаТекст.FontColor:=_CLR_GREEN;
      Form.тИтогоСдачаТекст.Caption:="Сумма закрытия аванса:";
      Form.тИтогоСдача.Color:=_CLR_BTNFACE;
    EndIf;   
