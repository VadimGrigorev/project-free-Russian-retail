            зЦЗ.Name:="Внутренние перемещения";
            зЦЗ.ВнутреннееПеремещение:=1;
            зЦЗ.Save();
          EndIf;
        EndIf;
        зСЗ:=Ref.зтСтатьиЗатрат;
