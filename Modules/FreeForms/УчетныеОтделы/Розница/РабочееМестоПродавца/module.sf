      Form.тИтогоСдачаТекст.FontColor:=_CLR_RED;
      Form.тИтогоСдачаТекст.Caption:="Итого осталось оплатить:";
      Form.тИтогоСдача.Color:=MixColors(_CLR_BTNFACE,_CLR_RED,10);
