          Договор.Name:=Trim(ТекущийМагазин.ЮрЛицо);
          Договор.Parent(Контрагент);
          Договор.ЮрЛицо:=ТекущийМагазин.ЮрЛицо;
          Try
            Договор.Save();
          Except
            Box("Невозможно создать договор выбранного покупателя: "+PopError()+"!",Q_STOP);
            Exit 0;
          EndTry;
        EndIf;
      EndIf;
    Else
