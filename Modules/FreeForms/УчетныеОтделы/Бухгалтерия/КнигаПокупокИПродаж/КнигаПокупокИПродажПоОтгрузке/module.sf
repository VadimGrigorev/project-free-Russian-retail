  |AllowIncompatibleSortPaths 1;
  |Group зК;
  |Sort зДатаАв,зНомерАв;
  |Group зЭл;)";
  З:=Query.Create();
  З.Execute(ТЗ,1,1,"зК,зЭл");
  
  Exit З;
