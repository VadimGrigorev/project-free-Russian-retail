Function СозданиеБухОперации()
  оЮЛ:=Form.оЮЛ.Value;
  НачДата:=BegOfDay(Form.НачДата.Value);
  КонДата:=BegOfDay(Form.КонДата.Value);

  Индекс:="НДС:ДВ";
  спДок:=НайтиДокументыПоИдентификатору(Индекс,"движений по НДС");
  If спДок=0 Then
    Exit;
  EndIf;
  
  
  Сч76Н1:=глНайтиСчет("76.Н.1");
  Сч682:=глНайтиСчет("68.2");
  Сч76АВ:=глНайтиСчет("76.АВ");
  Сч193:=глНайтиСчет("19.3");
  
  //Корректировка 19.3
  ТЗ:="Period From НачДата to КонДата;
  |зЮЛ:=Storage.БухгалтерскиеСчета.ЮрЛицо;
  |Condition(зЮЛ=оЮЛ);
  |зСч:=Storage.БухгалтерскиеСчета.Счет;
  |зСуб1:=Storage.БухгалтерскиеСчета.Субконто1;
  |зКонОст:=EndTotals(Сумма);
  |зРасход:=Expense(Сумма);
  |зПриход:=Income(Сумма);
  |Condition(зСч=Сч193);
  |Group зСуб1;";
  З19:=Query.Create();
  З19.Execute(ТЗ);
  
  //Корректировка 76.Н.1
  ТЗ:="Period From НачДата to КонДата;
  |зЮЛ:=Storage.БухгалтерскиеСчета.ЮрЛицо;
  |Condition(зЮЛ=оЮЛ);
  |зСч:=Storage.БухгалтерскиеСчета.Счет;
  |зСуб1:=Storage.БухгалтерскиеСчета.Субконто1;
  |зКонОст:=EndTotals(Сумма);
  |зРасход:=Expense(Сумма);
  |зПриход:=Income(Сумма);
  |Condition(зСч=Сч76Н1);
  |Group зСуб1;";
  З76:=Query.Create();
  З76.Execute(ТЗ);
  
  
  аДок:=спДок.GetByName(оЮЛ.Code);
  If IsEmpty(аДок) Then
    аДок:=Doc.БухгалтерскаяОперация;
    аДок.New();
    аДок.КодОперации:=Enum.коБухгалтерскаяОперация.БухгалтерскаяОперация;
    аДок.DocDate:=КонДата;
    аДок.Автор:=глПользователь;
    аДок.ЮрЛицо:=оЮЛ;
    аДок.Комментарий:="Проводки по НДС за период с "+НачДата+" по "+КонДата;
    аДок.СуммаВзаиморасчетов:=0;
    глУстановитьНовыйНомер(аДок);
    аДок.УникальныйИдентификатор:=Индекс;
    спДок.SetByName(оЮЛ.Code,аДок);
  EndIf;
  
  
  
  аНалог:=глНайтиСубконтоПоИмени(Сч682.ВидСубконто1,"Налог: начислен/уплачен");
  
  аК:=Ref.кнтКонтрагенты;
  Таб.Select();
  While Таб.Next() Do
    If Таб.зК=0 Then
      Continue;
    EndIf;
    Таб2:=Таб.ТабПродаж;
    СмНДС:=0;
    СмАвансы:=0;
    Таб2.Select();
    While Таб2.Next() Do
      If Таб2.См=0 Then
        Continue;
      EndIf;
      If (Таб2.ФлКоррИзДругойКниги=0)And((Таб2.ТДок=0)Or(Таб2.ТДок>=4)) Then
        СмНДС:=СмНДС+Round(Таб2.См10*10/110,2)+Round(Таб2.См18*18/118,2)+Round(Таб2.См20*20/120,2);
      ElseIf Таб2.ТДок=1 Then
        СмАвансы:=СмАвансы+Round(Таб2.См18*18/118,2)+Round(Таб2.См20*20/120,2);
      EndIf;
    EndDo;
    Таб2:=Таб.ТабПокупок;
    Таб2.Select();
    While Таб2.Next() Do
      If Таб2.См=0 Then
        Continue;
      EndIf;
      If (Таб2.ФлКоррИзДругойКниги=1)And((Таб2.ТДок=0)Or(Таб2.ТДок>=4)) Then
        СмНДС:=СмНДС-Round(Таб2.См10*10/110,2)-Round(Таб2.См18*18/118,2)-Round(Таб2.См20*20/120,2);
      EndIf;
    EndDo;
    
    
    aTab:=аДок.LineParts("Содержание");
    //Сумма НДС 68.2->76.Н.1
    If СмНДС<>0 Then
      См76:=0;
      З76.First();
      If З76.ResultTable.LocateAndGoto("зСуб1,@LEVEL",Таб.зК,1)>0 Then
        См76:=З76.зКонОст;
      EndIf;
      См:=Round(?((Max(СмНДС+См76,-См76-СмНДС)<0.1)And(См76<>0),-См76,СмНДС),2);
      
      If См<>0 Then
        aTab.NewLine();
        aTab.СчетД:=Сч76Н1;
        aTab.СубконтоД1:=Таб.зК;
        aTab.СчетК:=Сч682;
        aTab.СубконтоК1:=аНалог;
        aTab.Сумма:=См;
      EndIf;
    EndIf;
    
    If СмАвансы<>0 Then
      aTab.NewLine();
      aTab.СчетД:=Сч76АВ;
      aTab.СубконтоД1:=Таб.зК;
      aTab.СчетК:=Сч682;
      aTab.СубконтоК1:=аНалог;
      aTab.Сумма:=Max(СмАвансы,-СмАвансы);
    EndIf;
    
    Таб2:=Таб.ТабПокупок;
    СмНДС:=0;
    СмЗачАвансы:=0;
    Таб2.Select();
    While Таб2.Next() Do
      If Таб2.См=0 Then
        Continue;
      EndIf;
      If (Таб2.ФлКоррИзДругойКниги=0)And((Таб2.ТДок=0)Or(Таб2.ТДок>=4)) Then
        СмНДС:=СмНДС+Round(Таб2.См10*10/110,2)+Round(Таб2.См18*18/118,2)+Round(Таб2.См20*20/120,2);
      ElseIf Таб2.ТДок=2 Then
        СмЗачАвансы:=СмЗачАвансы+Round(Таб2.См18*18/118,2)+Round(Таб2.См20*20/120,2);
      EndIf;
    EndDo;
    Таб2:=Таб.ТабПродаж;
    Таб2.Select();
    While Таб2.Next() Do
      If Таб2.См=0 Then
        Continue;
      EndIf;
      If (Таб2.ФлКоррИзДругойКниги=1)And((Таб2.ТДок=0)Or(Таб2.ТДок>=4)) Then
        СмНДС:=СмНДС-Round(Таб2.См10*10/110,2)-Round(Таб2.См18*18/118,2)-Round(Таб2.См20*20/120,2);
      EndIf;
    EndDo;
    
    //Сумма НДС 19.3->68.2
    If СмНДС<>0 Then
      См19:=0;
      З19.First();
      If З19.ResultTable.LocateAndGoto("зСуб1,@LEVEL",Таб.зК,1)>0 Then
        См19:=З19.зКонОст;
      EndIf;
      См:=Round(?((Max(СмНДС-См19,См19-СмНДС)<0.1)And(См19<>0),См19,СмНДС),2);
      
      If См<>0 Then
        aTab.NewLine();
        aTab.СчетД:=Сч682;
        aTab.СубконтоД1:=аНалог;
        aTab.СчетК:=Сч193;
        aTab.СубконтоК1:=Таб.зК;
        aTab.Сумма:=См;
      EndIf;
    EndIf;
    
    If СмЗачАвансы<>0 Then
      aTab.NewLine();
      aTab.СчетД:=Сч682;
      aTab.СубконтоД1:=аНалог;
      aTab.СчетК:=Сч76АВ;
      aTab.СубконтоК1:=Таб.зК;
      aTab.Сумма:=Max(СмЗачАвансы,-СмЗачАвансы);
    EndIf;
  EndDo;
  
  If aTab.Size()>0 Then
    аДок.СуммаВзаиморасчетов:=aTab.Sum("Сумма");
    If not глЗаписать(аДок) Then
      Box("Ошибка при создании операции!",Q_STOP);
      Exit;
    EndIf;
    If not глОбработать(аДок) Then
      Box("Ошибка при обработке операции "+аДок+"! Обработайте документ вручную!",Q_STOP);
      Exit;
    EndIf;
  EndIf;  
  
  Box("Операция "+аДок+" создана успешно!",Q_INFORMATION);
EndFunction



