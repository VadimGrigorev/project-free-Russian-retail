Function ОбновитьСвойства()
  оСвойство:=Form.оСвойство.Value;
  If оСвойство.Selected()<>0 Then
    аЭл:=Ref.общДополнительныеСвойства;
    If оСвойство.ВидСправочника=Enum.ВидыСправочниковСДопСвойствами.кнтКонтрагенты Then
      бЭл1:=Д.Контрагент;
      бЭл2:=Д.ЮрЛицо.Контрагент;
    EndIf;
    If аЭл.Find("Элемент,ТипСвойства",бЭл1,оСвойство) Then
      If Trim(аЭл.Name)<>"" Then
        Form.оПолучатель.Value:=Trim(аЭл.Name);
      EndIf;
    EndIf;
    If _And(not IsEmpty(бЭл2),аЭл.Find("Элемент,ТипСвойства",бЭл2,оСвойство)) Then
      If Trim(аЭл.Name)<>"" Then
        Form.оОтправитель.Value:=Trim(аЭл.Name);
      EndIf;
    EndIf;
  EndIf;
EndFunction

Function ДобавитьДокумент(аДок,ТВ);
  If _And(аДок.DBName()="ВозвратОтПокупателя",(аДок.КодОперации=Enum.коВозвратОтПокупателя.ВозвратТМЦ)or(аДок.КодОперации=Enum.коВозвратОтПокупателя.ВнутреннееПеремещение),аДок.ЮрЛицо=Д.ЮрЛицо) Then
    If аДок.Status()>1 Then
      aTab:=аДок.LineParts("Номенклатура");
      aTab.Select();
      While aTab.Next() Do
        If ТВ.FindAndGoto(aTab.Номенклатура,,"Н")=0 Then
          ТВ.NewLine();
          ТВ.Н:=aTab.Номенклатура;
        EndIf;
        ТВ.К:=ТВ.К+aTab.Количество;
        ТВ.С:=ТВ.С+aTab.Сумма;
      EndDo;
    EndIf;
  EndIf;
EndFunction
  
Function ПолучитьРассчитаннуюТаблицуДокумента();
  //Подготовка Таблицы возвратов
  ТВ:=Tab.Create("Н");
  ТВ.AddColumn("К",,"Number");ТВ.AddColumn("С",,"Number");
  Сп:=Д.LoadLinkedDocuments(1);
  For i:=1 to Сп.Size() Do
    ДобавитьДокумент(Сп.Get(i),ТВ);
  EndDo;
  ТВ.Group("Н","К,С");  
  б:=Д.LineParts("Номенклатура").Copy();
  
  //Отнимаем возвраты
  If ТВ.Size()>0 Then
    б.Select();
    If б.Next() Then
      If ТВ.FindAndGoto(б.Номенклатура,,"Н")>0 Then
        If ТВ.К>0 Then
          Колво:=б.Количество;
          См:=б.Сумма;
          
          Кл2:=Min(Колво,ТВ.К);
          б.Количество:=Round(Max(Колво-Кл2,0),6);
          См2:=Round(ТВ.С/ТВ.К*Кл2,2);
          б.Сумма:=Round(Max(См-См2,0),2);
          ТВ.К:=ТВ.К-Кл2;
          ТВ.С:=ТВ.С-См2;
          If ТВ.К=0 Then
            ТВ.Н:=0;
          EndIf;
        EndIf;
      EndIf;
    EndIf;
  EndIf;
  
  Exit б;
EndFunction  




