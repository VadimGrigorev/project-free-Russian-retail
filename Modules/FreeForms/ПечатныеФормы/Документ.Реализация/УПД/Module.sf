  пИННПокупателя:=Replace(Trim(Д.Контрагент.ИНН),"\","/");
  пВалюта:="Российский рубль, 643";
  пПокупательИНН:=пПокупатель+", ИНН/КПП: "+пИННПокупателя;
  пПользователь:=глПользователь;
  
