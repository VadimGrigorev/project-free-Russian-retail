    пОКЕИ:="796";
    пСтрана:="";//"Российская Федерация";
    пСтранаКод:="";//"643";
    пГТД:="";
    зН:=б.Номенклатура;
    If зН.сертСтранаПроисхождения.Selected()<>0 Then
      пСтрана:=зН.сертСтранаПроисхождения;
